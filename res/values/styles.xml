<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

   
    <!-- Aqui deberia poner las especificaciones customizadas de mis propiedades para toda la Aplicacion -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
       <!-- <item name="android:windowNoTitle">true</item> -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="styleName">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>
    <!--  Fin de los estilos base de la aplicaciÃ³n y barra de herramientas -->
    
    
    <!-- Estilos para el Dashboard -->
    <style name="ActionBarCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff29549f</item>
        <item name="android:background">@null</item>
    </style>
    <style name="ButtonSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff29549f</item>
        <item name="android:background">@null</item>
    </style>
    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dedede</item>
    </style>
    <!-- Fin de Estilos para el Dashboard -->
    
    <style name="loginlayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">30.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>
    <style name="usernamestyle">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30.0dip</item>
        <item name="android:hint">@string/lbl_login</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="separatorstyle">
        <item name="android:textSize">17.0dip</item>
        <item name="android:background">@null</item>
    </style>
    <style name="passwordstyle">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30.0dip</item>
        <item name="android:layout_margin">0.0dip</item>
        <item name="android:hint">@string/lbl_password</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="Button">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff10110c</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
    </style>
    <style name="DashboardItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30.0dip</item>
        <item name="android:layout_marginRight">30.0dip</item>
    </style>
    <style name="relatedRecord">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>
    <style name="MenuAnimation">
        <item name="android:windowEnterAnimation">@anim/menu_pop_up</item>
        <item name="android:windowExitAnimation">@anim/menu_pop_down</item>
    </style>
    <style name="OrdenesListText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>   
    </style>
    <style name="OrdenesListTimer">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#8e8d8d</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="OrdenesListDetails">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#8e8d8d</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="label">        
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="labelAdapter">                    
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
     <style name="ContentText">        
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>        
    </style>    
    <style name="HeaderItemText">        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>     
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
      <style name="HeaderItemTextMedium">        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>     
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="HorizontalLinearLayout">        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="VerticalLinearLayout">        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="itemImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>                
    </style>
</resources>
