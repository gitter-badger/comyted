<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Icono -->
 	<ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ofertas" />
 
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image"
        android:orientation="vertical" >

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
	        <!-- Codigo -->
	        <TextView
	            android:id="@+id/oferta_codoferta"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	        <TextView	            
	            android:layout_marginLeft="1dip"
	            android:layout_marginRight="1dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="-"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	        <!-- Descripcion -->
	        <TextView	            
	            android:id="@+id/oferta_descripcion"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Proyecto de Mantenimiento"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        </LinearLayout>
	        
        <!-- Contacto -->        
        <TextView
            android:id="@+id/oferta_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto: Jesus Lopez Perez" />
        
	    <!-- Fecha Propuesta --> 		     	
        <TextView
            android:id="@+id/oferta_fecha_propuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 01/01/2015"
            android:layout_alignParentLeft="true"
             />	                        

         <!-- Responsable -->        
        <TextView
            android:id="@+id/oferta_responsable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responsable: Jesus Lopez Perez" />
        
          <!-- Tipo -->
        <TextView
            android:id="@+id/oferta_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Oferta de Mantenimiento" />
        
        <!-- Estado -->
        <TextView
            android:id="@+id/oferta_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Aprobada" />
        
      
    </LinearLayout>

   

</RelativeLayout>