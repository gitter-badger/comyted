<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/container" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent" android:layout_height="fill_parent" tools:context=".LoginActivity" >
  <ScrollView android:orientation="horizontal" android:clipChildren="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="30.0dip" android:fillViewport="true" >
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="0.0dip" android:weightSum="1.0" >
        
        <!-- BANNER -->
        <TableLayout android:id="@+id/headerLayouttest" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="0.0dip">
            <TableRow android:layout_gravity="fill_horizontal" android:layout_marginTop="20.0dip" android:layout_marginBottom="10.0dip" >                

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="60dip"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginBottom="20.0dip"
                    android:layout_weight="1.0"
                    android:contentDescription="@string/imageview"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_logo2" />

            </TableRow>
        </TableLayout>
        
        <!-- Login Form -->
        
        <LinearLayout
            android:id="@+id/userField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/zLoginField"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="0.0dip"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <LinearLayout
                        android:id="@+id/UserLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageuser"
                            android:layout_width="wrap_content"
                            android:layout_height="25.0dip"
                            android:layout_marginBottom="0.0dip"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="0.0dip"
                            android:layout_marginTop="0.0dip"
                            android:contentDescription="@string/imageview"
                            android:src="@drawable/usericon" />

                        <EditText
                            android:id="@+id/txtlogin"
                            style="@style/usernamestyle"
                            android:inputType="text"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip"
                    android:layout_margin="0.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="0.0dip"
                    android:background="@drawable/loginbar" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <LinearLayout
                        android:id="@+id/userPassField"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edit_text"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imagepass"
                            android:layout_width="wrap_content"
                            android:layout_height="25.0dip"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="0.0dip"
                            android:contentDescription="@string/imageview"
                            android:src="@drawable/pwdicon" />

                        <EditText
                            android:id="@+id/txtpassword"
                            style="@style/passwordstyle"
                            android:inputType="textPassword" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signInLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:gravity="center" >

                <!-- <Button android:textSize="15.0dip" android:textStyle="bold" android:layout_gravity="center" android:id="@+id/btn_login" android:background="@drawable/loginbutton" android:layout_width="fill_parent" android:layout_height="45.0dip" android:layout_marginTop="0.0dip" android:layout_marginBottom="0.0dip" android:text="@string/signin" style="@style/Button" /> -->

                <Button
                    android:id="@+id/btn_login"
                    style="@style/DashboardButton"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0.0dip"
                    android:layout_marginTop="0.0dip"
                    android:drawableTop="@drawable/btn_login"
                    android:gravity="center_horizontal"
                    android:text="@string/btn_login" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- Footer -->
        
        <RelativeLayout android:id="@+id/FooterMessage" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="30.0dip">
            <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/footer1" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginBottom="10.0dip">
                <TextView android:textColor="#ff545454" android:id="@+id/acs_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="10.0dip" android:layout_marginBottom="20.0dip" android:text="@string/access_information" />
                <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:textColor="#ff545454" android:gravity="bottom" android:layout_gravity="bottom" android:id="@+id/copyrightInfo" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:text="@string/copyright" android:layout_weight="1.0" />
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10.0dip" android:src="@drawable/infologin" android:onClick="showAbout" android:contentDescription="@string/imageview" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
   </ScrollView>
</RelativeLayout>